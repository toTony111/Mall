<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    >

    <LinearLayout
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/shape_shop_makeagroup"
        android:orientation="vertical"
        android:layout_marginRight="5dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:text="免单拼团"
                android:textColor="#ff353535"
                android:textSize="16sp"
                android:layout_marginRight="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:35:52"
                android:textSize="12dp"
                android:textColor="#ffffffff"
                android:background="@drawable/shape_shop_mg_time"
                />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="0元好物，拼团抢"
            android:textColor="#ffb2b2b2"
            android:textSize="12sp"
            android:layout_marginTop="6dp"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:id="@+id/good1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/image_shop_good"
                    >
                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:text="1024人参与"
                    android:textColor="#ffea5a5a"
                    android:textSize="10sp"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:background="@drawable/shape_shop_mg_border"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/good2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/image_shop_good"
                    >
                </ImageView>

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="24dp"
                    android:text="去开团"
                    android:textColor="#ffffffff"
                    android:layout_marginTop="10dp"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:background="@drawable/shape_shop_mg_btn2"
                    />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/shape_shop_makeagroup"
        android:orientation="vertical"
        android:layout_marginRight="5dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:text="免单拼团"
                android:textColor="#ff353535"
                android:textSize="16sp"
                android:layout_marginRight="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:35:52"
                android:textSize="12dp"
                android:textColor="#ffffffff"
                android:background="@drawable/shape_shop_mg_time"
                />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="限时限量抢好货！"
            android:textColor="#ffffa971"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginTop="6dp"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:id="@+id/good3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/image_shop_good"
                    >
                </ImageView>

                <TextView
                    android:layout_width="27dp"
                    android:layout_height="wrap_content"
                    android:text="¥158"
                    android:textColor="#ffed5757"
                    android:textSize="12sp"
                    android:layout_marginTop="6dp"
                    />
                <TextView
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:text="¥239"
                    android:textColor="#ffb2b2b2"
                    android:textSize="10sp"
                    android:layout_marginTop="4dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/good4"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/image_shop_good"
                    >
                </ImageView>

                <TextView
                    android:layout_width="27dp"
                    android:layout_height="wrap_content"
                    android:text="¥158"
                    android:textColor="#ffed5757"
                    android:textSize="12sp"
                    android:layout_marginTop="6dp"
                    />
                <TextView
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:text="¥239"
                    android:textColor="#ffb2b2b2"
                    android:textSize="10sp"
                    android:layout_marginTop="4dp"
                    />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>