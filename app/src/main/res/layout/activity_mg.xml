<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff5f5f5">
    <ImageView
        android:id="@+id/mg_bg"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:scaleType="fitXY"
        android:src="@mipmap/top_bg"
        >
    </ImageView>

    <TextView
        android:id="@+id/tv_rules"
        android:layout_marginTop="160dp"
        android:layout_width="84dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:text="活动规则"
        android:textColor="#ff353535"
        android:textSize="14sp"
        android:background="@drawable/shape_tv_rules"
        android:gravity="center"
        />

    <RelativeLayout
        android:id="@+id/rl_mg_title"
        android:layout_width="351dp"
        android:layout_height="145dp"
        android:layout_below="@id/mg_bg"
        android:layout_marginTop="-44dp"
        android:background="@drawable/shape_mg"
        android:layout_centerInParent="true"
        >
            <ImageView
                android:layout_marginTop="10dp"
                android:id="@+id/iv_mg_person_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="12dp"
                android:src="@mipmap/ic_share">
            </ImageView>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="14dp"
                android:layout_toRightOf="@+id/iv_mg_person_icon"
                android:layout_width="126dp"
                android:layout_height="wrap_content"
                android:text="已有 1234 人参与"
                android:textColor="#ff353535"
                android:gravity="center"
                android:textSize="16sp"
                />

            <ImageView
                android:layout_marginTop="10dp"
                android:id="@+id/iv_mg_person_save"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="16dp"
                android:layout_toLeftOf="@id/iv_mg_person_share"
                android:src="@mipmap/ic_share">
            </ImageView>

            <ImageView
                android:layout_marginTop="10dp"
                android:id="@+id/iv_mg_person_share"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="16dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ic_share">
            </ImageView>

            <TextView
                android:id="@+id/step1"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="47dp"
                android:layout_marginLeft="52dp"
                android:text="1"
                android:gravity="center"
                android:textColor="#fff"
                android:background="@drawable/shape_circle"
                />

            <TextView
                android:layout_below="@id/step1"
                android:layout_marginTop="8dp"
                android:layout_width="56dp"
                android:layout_height="36dp"
                android:text="购买发起开团"
                android:layout_marginLeft="40dp"
                android:textColor="#ff353535"
                android:textSize="14sp"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/step2"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="47dp"
                android:layout_marginLeft="160dp"
                android:text="2"
                android:gravity="center"
                android:textColor="#fff"
                android:background="@drawable/shape_circle"
                />

            <TextView
                android:layout_marginTop="8dp"
                android:layout_below="@id/step2"
                android:layout_width="56dp"
                android:layout_height="36dp"
                android:text="购买发起开团"
                android:textColor="#ff353535"
                android:textSize="14sp"
                android:layout_marginLeft="148dp"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/step3"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="47dp"
                android:layout_marginLeft="267dp"
                android:text="3"
                android:gravity="center"
                android:textColor="#fff"
                android:background="@drawable/shape_circle"
                />

            <TextView
                android:layout_marginTop="8dp"
                android:layout_below="@id/step3"
                android:layout_width="56dp"
                android:layout_height="36dp"
                android:layout_marginLeft="255dp"
                android:text="购买发起开团"
                android:textColor="#ff353535"
                android:textSize="14sp"
                android:gravity="center"
                />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="8dp"
        android:layout_below="@id/rl_mg_title"
        android:layout_width="351dp"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content" />
</RelativeLayout>